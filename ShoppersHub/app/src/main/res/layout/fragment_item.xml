<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grandis"
    tools:context=".Ui.Fragments.ItemFragment">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="match_parent"
        android:src="@drawable/img_placeholder"
        android:scaleType="centerCrop"
        android:layout_height="400dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_item"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="NAME"
                android:fontFamily="@font/playfair"
                android:textStyle="bold"
                android:textColor="@color/tyrianpurple" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="$ Price"
                android:fontFamily="@font/playfair"
                android:textColor="@color/tyrianpurple" />


            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="12dp"
                android:text="Lorem ipsum dolor sit amet, consectet tetur adipiscing elit sed do eiusmod tempor, ut enim ad minim"
                android:fontFamily="@font/playfair"
                android:textAlignment="center"
                android:textColor="@color/tyrianpurple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:fontFamily="@font/playfair"
                            android:textColor="@color/tyrianpurple"
                            android:gravity="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_size_s"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_size_s"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:text="S"
                                android:textSize="12dp"
                                android:fontFamily="@font/playfair"
                                android:gravity="center"
                                android:background="@drawable/round_size"
                                android:textColor="@color/tyrianpurple"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_size_m"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_size_m"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:text="M"
                                android:textSize="12dp"
                                android:fontFamily="@font/playfair"
                                android:gravity="center"
                                android:background="@drawable/round_size"
                                android:textColor="@color/tyrianpurple"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_size_l"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_size_l"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:text="L"
                                android:textSize="12dp"
                                android:fontFamily="@font/playfair"
                                android:gravity="center"
                                android:background="@drawable/round_size"
                                android:textColor="@color/tyrianpurple"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_size_xl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_size_xl"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:text="XL"
                                android:textSize="12dp"
                                android:fontFamily="@font/playfair"
                                android:gravity="center"
                                android:background="@drawable/round_size"
                                android:textColor="@color/tyrianpurple"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/tyrianpurple"
                            android:text="Color"
                            android:fontFamily="@font/playfair"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cr_img_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:src="@color/grandis" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cr_img_2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:src="@color/bittersweet" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cr_img_3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:src="@color/tyrianpurple" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cr_img_4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:src="@color/amaranth" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_addtocart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button"
        android:text="ADD TO CART"
        android:fontFamily="@font/playfair"
        android:textColor="@color/romance" />

</RelativeLayout>