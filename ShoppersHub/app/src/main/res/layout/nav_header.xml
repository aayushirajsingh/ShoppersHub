<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/grandis"
            android:gravity="center"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/nav_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_placeholder"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/romance"/>

            <TextView
                android:id="@+id/tv_nav_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aayushi Raj Singh"
                android:textStyle="bold"
                android:fontFamily="@font/playfair"
                android:textColor="@color/tyrianpurple"
                android:textSize="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>